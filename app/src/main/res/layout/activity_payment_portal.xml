<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment_portal"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="252dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="390dp"
            android:layout_height="275dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-60dp"
            android:rotation="-38"
            android:rotationX="50"
            android:rotationY="13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/payment" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/ptot"
            android:textColor="#083568"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="-150dp"
            android:layout_marginTop="143dp"
            android:text="@string/pcvc"
            android:textAlignment="center"
            android:textColor="#083568"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="13dp"
            android:text="@string/pcexpiry"
            android:textAlignment="center"
            android:textColor="#083568"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:text="@string/pcnumber"
            android:textColor="#083568"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="193dp"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/payment"
            android:textColor="#083568"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="166dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="@string/pcname"
            android:textColor="#083568"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView18" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="274dp"
            android:layout_height="46dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            android:text="@string/phname"
            android:textColor="#083568"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="80dp"
            android:layout_height="52dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:srcCompat="@drawable/visa__1_" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="81dp"
            android:layout_height="55dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toEndOf="@+id/imageView17"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:srcCompat="@drawable/icons8_mastercard_logo_96" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="86dp"
            android:layout_height="58dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="11dp"
            app:layout_constraintStart_toEndOf="@+id/imageView18"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5"
            app:srcCompat="@drawable/american_express" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="221dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/A1"
            android:inputType="textPersonName"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/imageView20" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="385dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:hint="@string/holder_name"
            android:inputType="textPersonName"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="374dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="@string/H1"
            android:inputType="number"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="153dp"
            android:layout_height="66dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/H2"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="137dp"
            android:layout_height="67dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="@string/H3"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <Button
            android:id="@+id/button7"
            android:layout_width="194dp"
            android:layout_height="68dp"
            android:layout_marginStart="109dp"
            android:layout_marginTop="9dp"
            android:backgroundTint="#7681AE"
            android:text="@string/pabtnpay"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber4" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="195dp"
            android:layout_height="61dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="@string/type"
            android:inputType="textPersonName"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="223dp"
            android:layout_height="50dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="@string/H4"
            android:inputType="none"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>